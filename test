-- 3️⃣ Link games to genres
-- Elden Ring
INSERT INTO game_genres (game_id, genre_id)
SELECT g.id, ge.id
FROM games g, genres ge
WHERE g.title='Elden Ring' AND ge.name IN ('Action','Souls-like','Open World');

-- Hades
INSERT INTO game_genres (game_id, genre_id)
SELECT g.id, ge.id
FROM games g, genres ge
WHERE g.title='Hades' AND ge.name IN ('Roguelike','Action','Indie');

-- Hollow Knight
INSERT INTO game_genres (game_id, genre_id)
SELECT g.id, ge.id
FROM games g, genres ge
WHERE g.title='Hollow Knight' AND ge.name IN ('Metroidvania','Action','Indie');

-- Stardew Valley
INSERT INTO game_genres (game_id, genre_id)
SELECT g.id, ge.id
FROM games g, genres ge
WHERE g.title='Stardew Valley' AND ge.name IN ('Simulation','Farming','RPG');

-- Disco Elysium
INSERT INTO game_genres (game_id, genre_id)
SELECT g.id, ge.id
FROM games g, genres ge
WHERE g.title='Disco Elysium' AND ge.name IN ('RPG','Narrative','Detective');